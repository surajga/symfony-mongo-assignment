<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('resources/css/bootstrap.min.css') }}" />      
    </head>
    <body>
        <div class="container">
            <div class="d-flex align-items-center p-3 my-3 rounded shadow-sm">
                 <h3>User List</h3>
            </div>

            <div class="my-3 p-3 bg-white rounded shadow-sm"> 
                <div class="row">                 
                    <a href="{{ path('user_add')}}" class="btn btn-sm btn-success pull-right">Add New</a>
                </div>
                <br />
                <div class="row">   
                    <table class="table">
                            <thead>
                                <tr>
                                    <th>User name</th>
                                    <th>Email </th>
                                    <th>Address </th>
                                    <th>Phone </th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for user in all_users %}
                                <tr>
                                    <td> {{ user.firstname~" "~user.lastname }}  </td>
                                    <td> {{ user.email }} </td>
                                    <td> {{ user.address }} </td>
                                    <td> {{ user.phone }} </td>
                                    <td>
                                        <form action="{{ path('user_edit',{id: user.id})}}" method="post">
                                            <input type="hidden" name="_method" value="PUT" />
                                            <input type="submit" class="btn btn-sm btn-info" value="Edit" />
                                        </form>
                                        <br />
                                        <form action="{{ path('user_delete',{id: user.id})}}" method="post">
                                            <input type="hidden" name="_method" value="DELETE" />
                                            <input type="submit" class="btn btn-sm btn-danger" value="Delete" />
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                    </table>
                </div>
            </div>
        </div>
    </body>
</html>